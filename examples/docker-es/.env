# This env file work out-of-the-box with the opensearch example docker-compose setup

export INDEX_SERVER=https://elasticsearch:9200
export INDEX_OPENSEARCH=0
export INDEX_LOGIN=elastic
export INDEX_PASSWORD=HERE_THE_PASSWORD_FROM_SETUP_PASSWORD_OUTPUT

export CELERY_BROKER=redis://redis:6379/0

